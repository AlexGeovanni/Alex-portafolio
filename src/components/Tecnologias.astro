---
import { Icons } from "../data/menuItem";

---

<section id="tecnologías" class="tech">
    <div class="content content__tech">
        <h2>Tecnologías</h2>
        <p class="">
            Conocimientos que he adquirido durante mi carrera universitaria y puesto en práctica.
        </p>
        <div class="tech__tech-icons">
            <div class="leng">
                {
                    Icons.map((icon)=>
                        <div class="tech__icon">
                            <img src={`img/lenguajes/${icon.nameImg}`} alt={`${icon.title}`} />
                            <span>{icon.title}</span>
                        </div>
                    )
                }
            </div>
        </div>
    </div>
</section>